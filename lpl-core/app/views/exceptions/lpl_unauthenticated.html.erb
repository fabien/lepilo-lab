<div id="lpl_core_modal">
  <div id="lpl_core_modal_dialog">
    <div class="info">
      <h1></h1>
    </div>
    <img src="/images/login.jpg" alt="login splash screen" />
    <div class="content">
      <div>
        <% @login_param = Merb::Authentication::Strategies::Basic::Base.login_param %>
        <% @password_param = Merb::Authentication::Strategies::Basic::Base.password_param %>
        <form action="<%= slice_url(:merb_auth_slice_password, :perform_login) %>" method="POST" accept-charset="utf-8" class="login_form">
          <div class="login">
            <input type="hidden" name="_method" value="PUT" />
            <div class="formRow">
              <label><%= @login_param.to_s.capitalize %>: <input type="text" name="<%= @login_param.to_s %>" value="" id="<%= @login_param.to_s %>"></label>
            </div> <!-- close: formRow -->
            <div class="formRow">
              <label><%= @password_param.to_s.capitalize %>:<input type="password" name="<%= @password_param.to_s %>" value="" id="<%= @password_param.to_s %>"></label>
            </div> <!-- close: formRow -->
          </div>
          <!-- close: formRow -->
          <hr/>
          <div class="buttons">
            <a class='lpl_btn_square red cancelmodal' href="http://www.google.com">
              I got lost! Help!
            </a>
            <a class='lpl_btn_square green right submitform' href="#">
              Login
            </a>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>